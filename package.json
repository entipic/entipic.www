{
  "name": "entipic.www",
  "version": "1.0.0",
  "description": "entipic website: www.entipic.com",
  "private": true,
  "scripts": {
    "start": "node ./lib/app.js",
    "dev": "npm run tsc && node ./lib/app.js",
    "pretest": "npm run clean && npm run tsc",
    "test": "ava --no-cache --verbose  ./lib/*.test.js ./lib/**/*.test.js",
    "posttest": "npm run clean-test-code",
    "tsc": "tsc",
    "tscw": "tsc -w",
    "preversion": "npm run tsc",
    "postversion": "git push --follow-tags",
    "prepublish": "npm run tsc && npm run clean-test-code",
    "clean": "rimraf ./lib",
    "clean-test-code": "rimraf ./lib/**/*.test.js && rimraf ./lib/*.test.js",
    "watch": "npm-watch start",
    "build": "gulp"
  },
  "watch": {
    "start": {
      "patterns": [
        "lib"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 2000
    }
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/entipic/entipic.www.git"
  },
  "keywords": [
    "entipic",
    "www",
    "website"
  ],
  "author": "Dumitru Cantea",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/entipic/entipic.www/issues"
  },
  "homepage": "https://github.com/entipic/entipic.www",
  "dependencies": {
    "@entipic/data": "~1.2.x",
    "@entipic/domain": "~1.2.x",
    "body-parser": "^1.18.2",
    "dotenv": "^4.0.0",
    "entipic.core": "^0.0.2",
    "entipic.data": "^0.1.4",
    "entipic.url": "^0.1.0",
    "express": "^4.16.4",
    "jade": "^1.11.0",
    "mongodb": "^3.1.13",
    "urlset": "^0.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/mongodb": "^3.1.19",
    "@types/node": "^17.0.27",
    "bootstrap": "^3.3.5",
    "del": "^1.2.0",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-cssmin": "^0.1.7",
    "gulp-imagemin": "^2.3.0",
    "gulp-less": "^3.0.3",
    "gulp-minify-css": "^1.2.0",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "npm-watch": "^0.4.0",
    "rimraf": "^2.6.2",
    "typescript": "^4.5.5"
  }
}
